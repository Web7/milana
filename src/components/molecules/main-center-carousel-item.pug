mixin MainCenterCarouselItem(data)
	.mil-main-center-carousel-item(style="background-image: url(" + data.image + ")")
		.mil-main-center-carousel-item-content
			p.mb-5= data.text1
			p.h2.text-uppercase.mb-11= data.text2
			.d-inline-block
				if data.buttonsCount === 1
					a.btn.btn-primary.mx-3(href="catalog.html") В каталог
				if data.buttonsCount === 2
					a.btn.btn-primary.mx-3(href="catalog.html") Женщины
					a.btn.btn-primary.mx-3(href="catalog.html") Мужчины
