include ../molecules/rating-stars
include ../atoms/radio-checkbox

mixin ReviewEdit()
	.offcanvas.offcanvas-end.off-canvas-review-edit(tabindex="-1" id="offcanvasReviewEdit" aria-labelledby="offcanvasReviewEditLabel")
		.offcanvas-header
			button.btn-close.text-reset(data-bs-dismiss="offcanvas" aria-label="Close" type="button")
		.offcanvas-body.pt-0
			.offcanvas-scroll-bar.overflow-hidden.pe-md-30
				.container-fluid
					h5.offcanvas-title.mb-10#offcanvasReviewEditLabel оставить отзыв
					form.row
						.col-md-6.mb-11
							label.form-label.f-semibold.f-13px.mb-4 Выберите номер заказа:
							select.form-select.bg-light
								option № 56739/GD
								option № 56739/GD
								option № 56739/GD
								option № 56739/GD
						.col-md-6.mb-11
							label.form-label.f-semibold.f-13px.mb-4 Выберите товар:
							select.form-select.bg-light
								option Ботфорты / 211404-1-810F
								option Ботфорты / 211404-1-810F
								option Ботфорты / 211404-1-810F
								option Ботфорты / 211404-1-810F
						.col-12.mb-11
							label.form-label.f-semibold.f-13px.mb-0 Ваша оценка:
								.d-inline-block
									+RatingStars(3)
						.col-12.mb-11
							label.form-label.f-semibold.f-13px Ваш отзыв:
							textarea.form-control.bg-light.f-13px(placeholder="Оставить комментарий" rows="10")
						.col-12.mb-15
							+RadioCheckbox({
								class: 'align-items-stretch f-13px',
								type: 'checkbox',
								checked: true,
								title: 'Нажимая кнопку «Отправить», я принимаю условия <a href="#">Публичной оферты</a> и даю свое согласие на обработку моих персональных данных на условиях и для целей, определенных в <a href="#">Согласии на обработку персональных данных</a>'
							})
						.col-12
							button.btn.btn-black.btn-sm(type="submit") Оставить отзыв
