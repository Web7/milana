mixin CatalogFilters()
	nav.navbar.navbar-expand-lg.mb-8
		button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarCatalogFilter" aria-controls="navbarNavDarkDropdown" aria-expanded="false")
		.collapse.navbar-collapse#navbarCatalogFilter
			ul.navbar-nav
				li.nav-item.dropdown.me-4
					a.nav-link.dropdown-toggle#navbarSize(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Размер
					.dropdown-menu
				li.nav-item.dropdown.me-4
					a.nav-link.dropdown-toggle#navbarColor(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Цвет
					.dropdown-menu
				li.nav-item.dropdown.me-4
					a.nav-link.dropdown-toggle#navbarSeason(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Сезон
					.dropdown-menu
				li.nav-item.dropdown.me-4
					a.nav-link.dropdown-toggle#navbarMterial(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Метериал
					.dropdown-menu
				li.nav-item.dropdown.me-4
					a.nav-link.dropdown-toggle#navbarPrice(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Цена
					.dropdown-menu
				li.nav-item.dropdown.me-4
					a.nav-link.dropdown-toggle#navbarShop(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Магазин
					.dropdown-menu
				li.nav-item.dropdown.me-4
					a.nav-link.dropdown-toggle#navbarOtherFilters(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Другие фильтры
					.dropdown-menu

