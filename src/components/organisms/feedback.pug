include ../atoms/radio-checkbox

mixin Feedback()
	section.mil-feedback-section.text-white.px-xxxl-10.px-xxl-6.px-lg-8.py-xxxl-19.py-xxl-15.py-lg-18.py-md-12.py-11.px-4
		form.row.align-items-lg-end.row-cols-auto.text-lg-start.text-center.flex-column.flex-lg-row.justify-content-between.h-100
			.col-auto
				p.h5.text-uppercase.mb-0.mil-feedback-title.mx-auto Подписаться на рассылку milana.shoes
			.col-auto.mx-md-auto.align-self-lg-center
				input.form-control.form-control-sm.border-0.border-bottom.border-white.text-white.mil-feedback-input(type="email" placeholder="Введите Ваш e-mail")
			.align-self-lg-center
				.row.align-items-center.flex-lg-column.flex-xxl-row.flex-row.justify-content-center
					.col-auto
						+RadioCheckbox({
							type: 'radio',
							title: 'Женщинам',
							id: 'woman',
							name: 'feedback',
							checked: true,
							class: 'form-check-white'
						})
					.col-auto
						+RadioCheckbox({
							type: 'radio',
							title: 'Мужчинам',
							id: 'man',
							name: 'feedback',
							class: 'form-check-white'
						})
			.align-self-lg-center.ms-lg-auto
				button.btn.btn-primary(type="button") Подписаться
