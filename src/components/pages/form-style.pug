include ../organisms/breadcrumb-and-title
include ../organisms/company/tabs-media-area
include ../organisms/company/form-style-container

block main
	main.mil-margin-left-side-menu.mil-margin-top-header
		section.pe-md-7.pe-lg-8.pt-7.pt-md-13.pt-xxl-16.ps-xxxl-18.ps-xxl-14.ps-xl-12.ps-lg-9.ps-md-8.px-4
			+BreadcrumbAndTitle({breadcrumb: ['Главная', 'Компания', 'Медиа'], title: 'Медиа', classTitle: 'mb-10'})
			div(data-sticky-container)
				+TabsPersonalArea({activeHref: 'form-style.html'})
				.mb-25
					.row.mb-7
						.d-flex
							.col-7.d-flex.align-items-left.form-style-image
								img(src='/src/images/form-style-image-01.png')
							+FormStyleContainer([
								{
									text1: 'Фирменный стиль',
									buttonsCount: 2
								}
							])
					.row
						.d-flex
							.col-7.d-flex.align-items-left.form-style-image
								img(src='/src/images/form-style-image-02.png')
							+FormStyleContainer([
								{
									text1: 'Руководство по фирменному стилю',
									buttonsCount: 3
								}
							])
		+Feedback()