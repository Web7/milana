								class: 'mb-3 ',
								type: 'radio',
								title: 'Оплата наличными при получении',
								id: 'radio4',
								name: 'paymentMethod',
								checked: true
							})
							+RadioCheckbox({
								class: 'mb-3',
								type: 'radio',
								title: 'Оплата при получении банковской картой',
								id: 'radio5',
								name: 'paymentMethod'
							})
							+RadioCheckbox({
								class: 'mb-3',
								type: 'radio',
								title: 'Оплата онлайн',
								id: 'radio6',
								name: 'paymentMethod'
							})
