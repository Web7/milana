extends ../templates/layout
include ../organisms/feedback
include ../molecules/pagination
include ../organisms/breadcrumb-and-title
include ../molecules/news-preview-item

block main
	- var news =[{image: '', title: 'Рекострукция магазина белая дача аутлет'},{image: '', title: 'Новая коллекция весна-лето 2021'},{image: '', title: 'Новинка:<br>подарочные карты'},{image: '', title: ''}]

	main.mil-margin-left-side-menu.mil-margin-top-header
		section.pe-md-7.pe-lg-8.pt-7.pt-md-13.pt-xxl-16.ps-xxxl-18.ps-xxl-14.ps-xl-12.ps-lg-9.ps-md-8.px-4
			+BreadcrumbAndTitle({
				breadcrumb: ['Главная', 'Компания', 'Новости'],
				title: 'Новости',
				classTitle: 'mb-10'
			})

			.row.row-cols-4
				each newsItem in [...news, ...news]
					.col.ps-0.pe-1.pb-1
						+NewsPreviewItem(newsItem)

			+Pagination()

		+Feedback()
